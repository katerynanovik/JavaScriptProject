<div id='shownCart'>
  <div id='BuyMenu'>
      <h2 id=h2YourOrder>
          Ваше замовлення
      </h2>
      <div id='FullCartBlock'>
          <div id='cart'></div>
          <div id='total'></div>
      </div>
      <div class="InputName">
          
              <p class="line"><b>ПІБ замовника</b><p>
          
          <input type="text" class="InputField" id="NameField" placeholder="Іванов Іван Іванович">
      </div>
      <div class="InputNum">
          
            <p class="line"><b>Контактний номер замовника</b></p>
          
          <input type="text" class="InputField" id="PhoneField" placeholder="+380990999999">
      </div>
      <div class="InputEmail">
         
            <p class="line"><b>E-mail</b></p>
          
          <input type="text" class="InputField" id="PhoneField" placeholder="IvanIvanov@ukr.net">
      </div>

      <form>
       
          <p class="line"><b>Форма оплати</b></p>
          
        <div>
          <div class="radioChoise">
            <input type="radio" id="PaymentChoice1"
                  name="contact" value="cash">
            <label for="contactChoice1">Готівка</label>
          </div>
          <div class="radioChoise">
            <input type="radio" id="PaymentChoice2"
                  name="contact" value="BeforeBuying">
            <label for="PaymentChoice2">Повна передплата</label>
          </div>
          <div class="radioChoise">
            <input type="radio" id="PaymentChoice3"
                  name="contact" value="Partly">
            <label for="PaymentChoice3">Часткова передплата</label>
          </div>
        </div>
      </form>

      <form>
          <p class="line"><b>Спосіб доставки</b></p>        
        <div>
          <div class="radioChoise">
            <input type="radio" id="PaymentChoice1"
                  name="contact" value="cash">
            <label for="contactChoice1">Відправка новою поштою(на відділення)</label>
          </div>
          <div class="radioChoise">
            <input type="radio" id="PaymentChoice2"
                  name="contact" value="BeforeBuying">
            <label for="PaymentChoice2">Відправка новою поштою(адресна)</label>
          </div>
          <div class="radioChoise">
            <input type="radio" id="PaymentChoice3"
                  name="contact" value="Partly">
            <label for="PaymentChoice3">Самовивіз</label>
          </div>
        </div>
      </form>

      <div class="InputNum">
             
              <p class="line"><b>Населений пункт</b></p>  

          <input type="text" class="InputField" id="PhoneField" placeholder="Київ">
      </div>
      <div class="InputNum">

        <p class="line"><b>Номер відділення Нової Пошти</b></p>  
          
          <input type="text" class="InputField" id="PhoneField" placeholder="5">
      </div>
      
  </div>
</div>

