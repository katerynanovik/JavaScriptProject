<div id='shownCart'>
  <div id='BuyMenu'>
      <h2 id=h2YourOrder>
          Ваше замовлення
      </h2>
      <div id='FullCartBlock'>
          <div id='cart'></div>
          <div id='total'></div>
      </div>

      <div class="InputName">       
              <p class="line"><b>ПІБ замовника</b><p>
          
          <input type="text" for="exampleInputEmail1" class="InputField" id="NameField" placeholder="Іванов Іван Іванович">
          <label id="nameError"></label>
      </div>


      <div class="InputNum">    
            <p class="line"><b>Контактний номер замовника</b></p>         
          <input type="text" class="InputField" id="PhoneField" placeholder="+380990999999">
          <label id="phoneError"></label>
      </div>

      <div class="InputEmail">         
            <p class="line"><b>E-mail</b></p>          
          <input type="text" class="InputField" id="EmailField" placeholder="IvanIvanov@ukr.net">
      </div>

      <form>
       
          <p class="line"><b>Форма оплати</b></p>
          
        <div>
          <div class="radioChoise">
            <input required type="radio" id="PaymentChoice1"
                  name="contact" value="cash" >
            <label for="contactChoice1" name="payChoice">Готівка</label >
          </div>
          <div class="radioChoise">
            <input type="radio" id="PaymentChoice2"
                  name="contact" value="BeforeBuying">
            <label for="PaymentChoice2" name="payChoice">Повна передплата</label>
          </div>
          <div class="radioChoise">
            <input type="radio" id="PaymentChoice3"
                  name="contact" value="Partly">
            <label for="PaymentChoice3" name="payChoice">Часткова передплата</label>
          </div>
        </div>
      </form>

      <form>
          <p class="line"><b>Спосіб доставки</b></p>        
        <div>
          <div class="radioChoise">
            <input type="radio" id="deliveryChoice1"
                  name="contact2" value="cash">
            <label for="deliveryChoice1">Відправка новою поштою(на відділення)</label>
          </div>
          <div class="radioChoise">
            <input type="radio" id="deliveryChoice2"
                  name="contact2" value="BeforeBuying">
            <label for="deliveryChoice2">Відправка новою поштою(адресна)</label>
          </div>
          <div class="radioChoise">
            <input type="radio" id="deliveryChoice3"
                  name="contact2" value="Partly">
            <label for="deliveryChoice3">Самовивіз</label>
          </div>
        </div>
      </form>

      <div class="InputNum">
             
              <p class="line"><b>Населений пункт</b></p>  

          <input type="text" class="InputField" id="CityField" placeholder="Київ">
      </div>
      <div class="InputNum">

        <p class="line"><b>Номер відділення Нової Пошти</b></p>  
          
          <input type="text" class="InputField" id="numberField" placeholder="5">
      </div>
      
      <div class="buyDiv">
      <button  class="buyCart" id="submit-order" type='button' >КУПИТИ</button>
    </div> 
    <div id="liqpay"></div>
    <!-- піключаємо скрипт -->
    <script src="//static.liqpay.ua/libjs/checkout.js" async></script>
  </div>
</div>

